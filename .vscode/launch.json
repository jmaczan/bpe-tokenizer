{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tokenization",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["tokenize"]
        },
        {
            "name": "Detokenization",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["detokenize"]
        },
        {
            "name": "Training",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["train", "--training_dataset=small_dataset.txt", "--vocabulary_size=300"]
        }
    ]
}